<Window x:Class="ToDoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ToDo Liste" Height="400" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="ToDo Liste" FontSize="20" FontWeight="Bold"/>

        <!-- Eingabe -->
        <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
            <TextBox Name="TodoInput" Width="200" Margin="0,0,10,0"/>
            <Button Content="Hinzufügen" Width="100" Click="AddTodo"/>
        </StackPanel>

        <!-- Filter -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Alle" Width="80" Margin="0,0,5,0" Click="ShowAll"/>
            <Button Content="Offen" Width="80" Margin="0,0,5,0" Click="ShowOpen"/>
            <Button Content="Erledigt" Width="80" Click="ShowDone"/>
        </StackPanel>

        <!-- Aufgabenliste -->
        <ListBox Name="TodoList" Height="250"/>
    </StackPanel>
</Window>